# Ignore everything in the root
/*

# But DO NOT ignore these files
!.gitignore
!composer.json
!composer.lock
!wp-config.php
!index.php
!.github/

# Allow the content directory
!wp-content/

# Ignore dynamic/generated folders inside wp-content
wp-content/upgrade/
wp-content/cache/
wp-content/uploads/

# Allow themes and plugins (track everything, or be specific below)
!wp-content/themes/
!wp-content/plugins/
!wp-content/languages/

# If you only want ONE specific theme and nothing else, 
# ignore other themes explicitly instead:
# wp-content/themes/twentytwentyfour/
# wp-content/themes/twentytwentythree/

# Ignore Composer's vendor folder
/vendor/
/wordpress/