{
  "key": "group_homepage",
  "title": "Homepage Settings",
  "fields": [
    {
      "key": "field_hero",
      "label": "Hero Section",
      "name": "hero",
      "type": "group",
      "sub_fields": [
        {
          "key": "field_hero_title",
          "label": "Main Title",
          "name": "title",
          "type": "text"
        },
        {
          "key": "field_hero_subtitle",
          "label": "Sub Title",
          "name": "subtitle",
          "type": "textarea"
        },
        {
          "key": "field_hero_image",
          "label": "Background Image",
          "name": "background_image",
          "type": "image",
          "return_format": "url"
        }
      ]
    },
    {
      "key": "field_featured_market_insights",
      "label": "Latest Insights - Featured",
      "name": "featured_market_insights",
      "type": "post_object",
      "multiple": true,
      "post_type": ["market_insight"],
      "return_format": "id"
    },
    {
      "key": "field_categories",
      "label": "Categories",
      "name": "categories",
      "type": "repeater",
      "sub_fields": [
        {
          "key": "field_category_icon",
          "label": "Icon",
          "name": "icon",
          "type": "image",
          "return_format": "url"
        },
        {
          "key": "field_category_name",
          "label": "Name",
          "name": "name",
          "type": "text"
        },
        {
          "key": "field_category_description",
          "label": "Description",
          "name": "description",
          "type": "textarea"
        },
        {
          "key": "field_category_features",
          "label": "Features",
          "name": "features",
          "type": "text"
        }
      ]
    },
    {
      "key": "field_top_dealers",
      "label": "Top Rated Dealers",
      "name": "top_dealers",
      "type": "post_object",
      "multiple": true,
      "post_type": ["dealer"],
      "return_format": "id"
    },
    {
      "key": "field_newsletter",
      "label": "Newsletter",
      "name": "newsletter",
      "type": "group",
      "sub_fields": [
        {
          "key": "field_newsletter_email",
          "label": "Email",
          "name": "email",
          "type": "email"
        }
      ]
    }
  ],
  "location": [
    [
      {
        "param": "post_type",
        "operator": "==",
        "value": "page"
      },
      {
        "param": "post_name",
        "operator": "==",
        "value": "home"
      }
    ]
  ]
}
