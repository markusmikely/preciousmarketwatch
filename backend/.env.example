# WordPress Database
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host

# WordPress URLs
# Local:   WP_HOME=http://localhost:8888
# Prod:    WP_HOME=https://preciousmarketwatch.com
WP_HOME=https://preciousmarketwatch.com
WP_SITEURL=https://preciousmarketwatch.com/wp

# Metal prices (pmw-metals-seed)
# Optional: single key for MetalPriceAPI — plugin builds Silver/Platinum/Palladium URLs (avoids masked URLs on server)
PMW_METALPRICEAPI_KEY=your_metalpriceapi_key
# Or set full URLs (must contain real api_key, not ••••••••):
# PMW_SILVER_API_URL=https://api.metalpriceapi.com/v1/latest?api_key=KEY&base=XAU&currencies=XAG
# PMW_PLATINUM_API_URL=...
# PMW_PALLADIUM_API_URL=...

PMW_METALS_DEV_API_KEY=your_metals_dev_api_key
PMW_CRON_SECRET=random_secret_for_daily_price_update

# Newsletter (Mailchimp) — used by POST /wp-json/pmw/v1/subscribe
# Optional: use MAILCHIMP_API_KEY and MAILCHIMP_AUDIENCE_ID as alternatives
PMW_MAILCHIMP_API_KEY=your_mailchimp_api_key
PMW_MAILCHIMP_LIST_ID=your_mailchimp_list_id

# PMW Bridge — WebSocket URL for Mission Control real-time updates
# Local:   ws://localhost:8000/ws
# Prod:    wss://agents.preciousmarketwatch.com/ws
PMW_BRIDGE_WS_URL=ws://localhost:8000/ws
