
# SPA Frontend Routing + WordPress Backend
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
RewriteBase /

# Don't rewrite actual files and directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Don't rewrite WordPress paths
RewriteCond %{REQUEST_URI} !^/wp/
RewriteCond %{REQUEST_URI} !^/wp-admin/
RewriteCond %{REQUEST_URI} !^/wp-content/
RewriteCond %{REQUEST_URI} !^/wp-includes/

# Don't rewrite known files
RewriteCond %{REQUEST_URI} !^/index\.php$
RewriteCond %{REQUEST_URI} !^/index\.html$

# Route all other requests to React app (SPA)
RewriteRule ^ /index.html [QSA,L]

</IfModule>

# END SPA Frontend Routing + WordPress Backend