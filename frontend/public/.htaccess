<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Explicitly pass WordPress entire /wp/ tree untouched
  # (includes /wp/wp-admin/, /wp/wp-content/, all .js/.css files)
  RewriteRule ^wp(/.*)?$ - [L]

  # Don't rewrite actual files or directories that exist
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA fallback â€” serve index.html for all other routes
  # This allows React Router to handle client-side navigation
  RewriteRule ^ /index.html [L]
</IfModule>
