{
    "$schema": "https://railway.app/railway.schema.json",
    "services": [
      {
        "name": "pmw-bridge",
        "source": {
          "type": "repo"
        },
        "rootDirectory": "bridge",
        "build": {
          "builder": "DOCKERFILE"
        },
        "deploy": {
          "restartPolicyType": "ON_FAILURE",
          "restartPolicyMaxRetries": 10
        }
      },
      {
        "name": "pmw-agents",
        "source": {
          "type": "repo"
        },
        "rootDirectory": "agents",
        "build": {
          "builder": "DOCKERFILE"
        },
        "deploy": {
          "restartPolicyType": "ON_FAILURE",
          "restartPolicyMaxRetries": 10
        }
      }
    ]
  }